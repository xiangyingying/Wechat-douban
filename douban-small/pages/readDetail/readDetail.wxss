.bg{
    width: 100%;height: 500rpx;
    opacity: .3;
}
.music-pic{
    width: 100rpx;height: 100rpx;
    position: absolute;
    top: 20%;left: 50%;
    z-index: 100;
    transform: translate(-50%,-20%);
}
.user-img{
    width: 100rpx;height: 100rpx;
}
.list{
    display: flex;
    align-items: center;
    margin: 20rpx;
    color:#A8A8A8;
}
.list .author{
    color: #828282;
    margin: 0 20rpx;
}
.show{
    margin-top: 10rpx;
    margin-right: 20rpx;
    font-size: 35rpx;
}
.title{
    font-weight: bold;
    margin-bottom: 50rpx;
    color: #4D576E;
    letter-spacing: .2em;
}
.container{
    width: 600rpx;
    margin: 20rpx auto;
}
.introduction{
    color: #848484;
    margin-top: 100rpx;
}
.introduction>view{
    margin-top: 20rpx;
    letter-spacing: .1em;
}
.collect image{
    width: 100rpx;height: 100rpx;  
    float: left;
    margin-top: -50rpx;
}
.collect image:nth-of-type(2){
    margin-left: 500rpx;
    margin-top: -100rpx;
}
.collect image:nth-of-type(1){
    margin-left: 380rpx;
}
.hr{
    width: 600rpx;
    border: 1px solid #eee;
}